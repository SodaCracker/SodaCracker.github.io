source "https://rubygems.org"

# 核心 Jekyll
gem 'jekyll', '~> 3.9'

# 必装：GitHub Pages 的健康检查
gem 'github-pages-health-check'

# --- 补全丢失的常用插件 (这是报错的核心原因) ---
gem 'kramdown-parser-gfm'  # Markdown 解析器 (必须有!)
gem 'jekyll-feed'          # RSS 订阅 (绝大多数主题都需要)
gem 'jekyll-seo-tag'       # SEO 标签 (绝大多数主题都需要)
gem 'jekyll-sitemap'       # 站点地图
gem 'jekyll-paginate'      # 分页功能

# --- 你原有的配置 ---
gem 'webrick'
gem 'minimal-mistakes-jekyll'
gem 'jekyll-include-cache'
gem 'nokogiri', '>= 1.18.9'
gem 'bigdecimal'